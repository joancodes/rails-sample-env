= form_with(model: [@company, @item], local: true, class: 'space-y-4') do |form|
  - if @item.errors.any?
    #error_explanation
      %h2
        = pluralize(@item.errors.count, "error")
        prohibited this item from being saved:
      %ul
        - @item.errors.full_messages.each do |message|
          %li= message
  .field
    = form.label :name, class: 'block text-sm font-medium text-gray-700'
    = form.text_field :name, class: 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500'
  .actions
    = form.submit class: 'bg-green-500 text-white visited:text-white px-4 py-2 rounded hover:bg-green-700'
